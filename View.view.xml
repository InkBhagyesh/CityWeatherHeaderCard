<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:html="http://www.w3.org/1999/xhtml"
    width="100%"
    controllerName="com.winslow.CityWeather.Card"
    busyIndicatorDelay="0"
>
   <HBox class="sapUiTinyMargin" alignContent="Center" justifyContent="SpaceBetween" alignItems="Center" wrap="Wrap">
    <!-- Left aligned group -->
        <HBox alignItems="Center" wrap="Wrap" id="idWeatherBox">

            <!-- Weather Icon -->
            <Image src="{/weatherIconUrl}" width="30px" height="30px"/>

            <Text id="weatherText" text="{/selectedCityText}" class="sapUiTinyMarginTop sapUiTinyMarginEnd sapUiTinyMarginBegin" />

            <!-- City Selector -->
            <ComboBox id="citySelect" width="200px" class="sapUiTinyMarginTop" selectedKey="Sunbury" items="{path: '/cities',sorter: {path: 'City',descending: false,group: true}}" selectionChange="onCityChange">
                <core:Item key="{name}" text="{name}" />
            </ComboBox>

        </HBox>

    <!-- Right aligned group -->
    <HBox alignItems="Center" justifyContent="Center" alignContent="Center" class="allImages" wrap="Wrap">
    
    <VBox class="hoverBox">
        <Image class="zoomImg" src="{/Image_3}" width="150px" height="50px" press="onPressButtonAF"/>
    </VBox>

    <VBox class="hoverBox">
        <Image class="zoomImg" src="{/Image_4}" width="150px" height="50px" press="onPressWinslow"/>
    </VBox>

    <VBox class="hoverBox">
        <Image class="zoomImg" src="{/Image_5}" width="150px" height="50px" press="onPressHub"/>
    </VBox>

    <VBox class="hoverBox">
        <Image class="zoomImg" src="{/Image_6}" width="150px" height="50px" press="onPressLP"/>
    </VBox>

</HBox>

</HBox>

</mvc:View>
